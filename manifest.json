{
    "manifest_version": 3,
    "name": "Website Time Tracker",
    "version": "1.0",
    "description": "Tracks the time spent on different websites.",
    "permissions": [
        "storage",
        "tabs",
        "alarms" 
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon" : "icon.png"
    }
}